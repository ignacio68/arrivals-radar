{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },
    "typeRoots": ["types"],
    "types": ["node", "mocha", "chai"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": false
  },
  "include": ["app", "types", "tests"],
  "exclude": ["node_modules", "platforms", "App_Resources", "hooks", "layout", "reports"]
}
